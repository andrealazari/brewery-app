<section class="my-page">

    <header class="header">
        <h1 class="logo">Brewery App</h1>
        <input class="menu-btn" type="checkbox" id="menu-btn" />
        <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
        <ul class="menu">
            <li><a href="/search">Search</a></li>
            <li><a href="/my_page">My Breweries</a></li>
            <li><a href="/brewery_feed">Mates Feed</a></li>
            <li>
                <form class="logout" action="/sessions" method="POST">
                    <input type="hidden" name="_method" value="delete">
                    <button>Logout</button>
                </form>
            </li>
        </ul>
    </header>

        <h2>Hello, <%= current_user['name'] %>!</h2>

    <article>
        <% breweries.each do |brewery| %>
            <section class="breweries">
                <section class="brew-info">
                    <h3><%= brewery['name'] %></h3>
                    <p><span>Type: </span><%= brewery['brewery_type'] %></p>
                    <p><span>Street: </span><%= brewery['street'] %></p>
                    <p><span>City: </span><%= brewery['city'] %></p>
                    <p><span>State: </span><%= brewery['state'] %></p>
                    <p><span>Country: </span><%= brewery['country'] %></p>
                </section>
                <section class="review">
                    <p><span>My Review</span></p>
                    <p>Rate: <%= brewery['rate'] %></p>
                    <p>Comments: <%= brewery['comments'] %></p>
                

                    <form action="/<%= brewery['id'] %>/edit">
                        <input type="hidden" name="name" value="<%= brewery['name'] %>">
                        <input type="hidden" name="brewery_type" value="<%= brewery['brewery_type'] %>">
                        <input type="hidden" name="street" value="<%= brewery['street'] %>">
                        <input type="hidden" name="city" value="<%= brewery['city'] %>">
                        <input type="hidden" name="state" value="<%= brewery['state'] %>">
                        <input type="hidden" name="country" value="<%= brewery['country'] %>">
                        <input type="hidden" name="website" value="<%= brewery['website'] %>">
                        <input type="hidden" name="rate" value="<%= brewery['rate'] %>">
                        <input type="hidden" name="comments" value="<%= brewery['comments'] %>">

                        <button>Edit</button>
                    </form>

                    <form action="/<%= brewery['id'] %>" method ="POST">
                        <input type="hidden" name="_method" value="delete">
                        <button>Delete</button>
                    </form>
                    <section class="likes">
                        <p>Likes</p>
                        <% if breweries_likes[brewery['id']] != nil %>
                            <p><%= breweries_likes[brewery['id']]%></p>
                        <% end %>
                    </section>
                </section>
            </section>
        <% end %>
    </article>
</section>


