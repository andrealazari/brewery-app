<section class="edit">
        <header>
        <h1>Brewery App</h1>

        <form action="/sessions" method="POST">
            <input type="hidden" name="_method" value="delete">
            <button>Logout</button>
        </form>
    </header>

    <nav>
        <ul>
            <li><a href="/search">Search</a></li>
            <li><a href="/my_page">My Breweries</a></li>
            <li><a href="/brewery_feed">Brewery Feed</a></li>
        </ul>
    </nav>

    
    <form action="/<%= brewery['id']%>" method="POST">
        <input type="hidden" name="_method" value="put">
        <%= brewery['name']%>
        <input type="number" min="0" max="10" name="rate" value="<%= brewery['rate'] %>">
        <input type="text" name="comments" value="<%= brewery['comments'] %>">
        <button>Update</button>
    </form>

</section>